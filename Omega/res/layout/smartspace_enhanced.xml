<?xml version="1.0" encoding="utf-8"?>
<com.google.android.systemui.smartspace.BcSmartspaceView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bc_smartspace_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipChildren="false"
    android:layout_gravity="center_vertical">

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/smartspace_card_pager"
        android:layout_width="match_parent"
        android:background="@drawable/work_card"
        android:backgroundTint="?backgroundColor"
        android:paddingStart="@dimen/enhanced_smartspace_margin_start_launcher"
        android:layout_height="@dimen/enhanced_smartspace_height"
        android:layout_gravity="center" />

    <com.google.android.systemui.smartspace.PageIndicator
        android:id="@+id/smartspace_page_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:importantForAccessibility="no"
        android:paddingStart="@dimen/page_indicator_padding_start"
        android:paddingTop="@dimen/page_indicator_padding_top_bottom"
        android:paddingBottom="@dimen/page_indicator_padding_top_bottom"
        android:visibility="visible" />
</com.google.android.systemui.smartspace.BcSmartspaceView>
